@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category";
}

<a class="btn btn-secondary btn-lg" asp-action="Create">
    <i class="bi bi-plus-circle-dotted"></i>
    Add Category
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Category!</h4>
        <p class="mb-0">No Categories were added yet.</p>
    </div>
}
else
{
    <div>
        <table class="table table-hover border-primary " id="example">
            <thead>
                <tr>
                    <th asp-for="Id" style="text-align:center">Id</th>
                    <th asp-for="Name">Category Name </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr class="border-1 border-success">
                        <td style="text-align:center">@c.Id</td>
                        <td>@c.Name</td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-end">
                                <a class="btn btn-info rounded rounded-3 me-2" asp-action="Update" asp-route-Id="@c.Id">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a class="btn btn-danger rounded rounded-3 js-delete " asp-action="Delete" asp-route-Id="@c.Id">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


@section Scripts
{

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}