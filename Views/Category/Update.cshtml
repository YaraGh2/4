@model Category

@{
    ViewData["Titles"] = "Edit Game";
}

<h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add a new game
</h5>

<form asp-controller="Category" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="ImageFile" />
            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Save</button>
        </div>
        <div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
            <img class="cover-preview d-none" alt="Cover" />
        </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}